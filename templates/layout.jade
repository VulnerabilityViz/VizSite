//- Constants
- var APP_NAME = 'Data Viz';

html
  head
    meta(http-equiv='X-UA-Compatible', content='IE=edge')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    script(src='/static/lib/jquery/dist/jquery.js')
    script(src='/static/lib/socket.io-client/socket.io.js')
    script(src='/static/lib/semantic/dist/semantic.min.js')
    script(src='/static/lib/toastr/toastr.min.js')
    script(src='/static/js/universal.js')
    link(rel='stylesheet', href='/static/lib/semantic/dist/semantic.min.css')
    link(rel='stylesheet', href='/static/lib/toastr/toastr.min.css')
    link(rel='stylesheet', href='/static/css/universal.css')
    block scripts
  body
    block content
    //- Small messages modal
    div.ui.small.basic.modal#message
      div.ui.icon.header
        i.info.circle.icon#message-icon
        span#message-title Information
      div.content
        p#message-content Information
      div.actions
        div.ui.green.basic.cancel.inverted.button 
          i.checkmark.icon
          span Okay
